{
  "bracketSpacing": true,
  "singleQuote": true,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "multiline": "always",
  "printWidth": 120,
  "endOfLine": "lf",
  "bracketSameLine": true,
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
